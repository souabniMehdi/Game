<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.souabni.drawing_game">

    <application
        android:name=".Players"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
<!--Allows the screen to don't be affected by the dsiplay of the keyboard, use the variiable android:windowSoftInputMode to fix this '-->
        <activity android:name=".Welcome_activity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GuessActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DrawingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DisplayRandomImageActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>